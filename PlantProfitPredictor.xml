	<!-- button template w/ tooltip -->
	<Button name="PPPButtonTemplate" virtual="true" toplevel="true" mouseEnabled="true">
		<Scripts>
			<OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_TOPLEFT", -8, 8)
				if self:GetText() ~= nil then
					GameTooltip:AddLine(self:GetText())
				else
					GameTooltip:AddLine("UNKNOWN")
				end
				GameTooltip:Show()
			</OnEnter>
			<OnLeave>
				if GameTooltip:IsOwned(self) then
					GameTooltip:Hide()
				end
			</OnLeave>
		</Scripts>
	</Button>
	
